{
  "name": "ch/debug",
  "description": "Easy Debug to PHP.",
  "keywords": ["php", "debug", "easy"],
  "license": "MIT",
  "authors": [
    {
      "name": "Wilson Champi",
      "email": "wchampi86@gmail.com"
    }
  ],
  "version": "1.0.1",
  "type": "library",
  "require": {
    "php": ">=5.4"
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.*",
    "squizlabs/php_codesniffer": "^3.1"
  },
  "autoload": {
    "psr-4": {
      "Ch\\Debug\\": "src/"
    }
  }
}
